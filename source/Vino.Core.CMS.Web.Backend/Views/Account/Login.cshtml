@{
    Layout = null;
}
@model Vino.Core.CMS.Web.Backend.Models.LoginData
<!DOCTYPE html>
<html>
<head>
    <title>登陆 -  Powered By Vinotec</title>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Cache-Control" content="no-cache">
    <meta http-equiv="Cache-Control" content="no-store">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="icon" href="~/favicon.ico" />
    <link rel="shortcut icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/layui/css/layui.css" />
    <environment names="Development">
        <link rel="stylesheet" href="~/css/login.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/login.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header login-header header">
            <div class="layui-main">
                <div class="login-logo">
                    <a class="logo-xsm logo" href="javascript:;">
                        <img src="~/images/logo.png" alt="">
                    </a>
                </div>
            </div>
        </div>
        <div class="login-main layui-clear">
            <div class="login-panel login-panel-user">
                <div class="layui-tab layui-tab-brief">
                    <ul class="layui-tab-title">
                        <li class="layui-this">登 录</li>
                    </ul>
                    <div class="layui-form layui-tab-content" style="padding: 20px 0;">
                        <div class="layui-tab-item layui-show">
                            <div class="layui-form layui-form-pane">
                                <form id="loginForm" class="layui-form" action="Login" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="layui-form-item">
                                        <label for="Account" class="layui-form-label">账号</label>
                                        <div class="layui-input-inline">
                                            <input type="text" id="Account" name="Account" lay-verify="required" autocomplete="off" class="layui-input" value="@Model?.Account">
                                        </div>
                                    </div>
                                    <div class="layui-form-item">
                                        <label for="Password" class="layui-form-label">密码</label>
                                        <div class="layui-input-inline">
                                            <input type="password" id="Password" Name="Password" lay-verify="required" autocomplete="off" class="layui-input" value="@Model?.Password">
                                        </div>
                                    </div>
                                    <div class="layui-form-item">
                                        <label for="ImageCode" class="login-vercode layui-form-label">
                                            <img id="imgImageCode" src="" title="点击换个验证码" onclick="reloadImageCode();" />
                                        </label>
                                        <div class="layui-input-inline">
                                            <input type="text" id="ImageCode" name="ImageCode" placeholder="请输入验证码" autocomplete="off" class="layui-input" maxlength="4">
                                        </div>
                                    </div>
                                    <div class="layui-form-item">
                                        <button class="layui-btn" lay-submit>立即登录</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/layui/layui.all.js"></script>
        <script src="~/js/vino/vino.page.js" asp-append-version="true"></script>
        <script src="~/js/vino/vino.from.js" asp-append-version="true"></script>
        <script src="~/js/vino/vino.ajax.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/layui/layui.all.js"></script>
        <script src="~/js/vino/vino.page.js" asp-append-version="true"></script>
        <script src="~/js/vino/vino.from.js" asp-append-version="true"></script>
        <script src="~/js/vino/vino.ajax.js" asp-append-version="true"></script>
    </environment>

    <script type="text/javascript">
        if (top.location != self.location) {
            top.location = self.location;
        }
        $(function () {
            $("#loginForm").vinoForm({
                onSuccess: function(reply, options) {
                    vino.page.msg.tip('登陆成功！',
                        function() {
                            vino.page.navigateTo("/", true);
                        });
                },
                onError: function(reply) {
                    reloadImageCode();
                }
            });

            reloadImageCode();
        });

        function reloadImageCode() {
            $("#ImageCode").val("");
            $("#imgImageCode").attr("src", `/Validate/ImageCode?type=login&t=${new Date().getTime()}`);
        }
    </script>
</body>
</html>