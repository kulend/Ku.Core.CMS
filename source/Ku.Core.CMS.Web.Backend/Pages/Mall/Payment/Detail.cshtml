@{
    Layout = "~/Pages/_WindowFormLayout.cshtml";
}
@using Ku.Core.CMS.Domain.Enum.Mall
<div class="layui-layout layui-layout-window">
    @using (Html.BeginForm<DetailModel>(""))
    {
        <div class="layui-body">
            @Html.ShowFor(x => x.Dto.Name)
            @Html.ShowFor(x => x.Dto.Description)
            @Html.ShowFor(x => x.Dto.IsEnable)
            @Html.ShowFor(x => x.Dto.IsMobile)
            @Html.ShowFor(x => x.Dto.PaymentMode)
            <fieldset id="dvConfigWeight" class="layui-elem-field">
                <legend>参数配置</legend>
                <div id="config-content" class="layui-field-box">
                    @foreach (var item in PaymentModeHelper.GetItemParameters(Model.Dto.PaymentMode))
                    {
                        <div class="layui-form-item">
                            <label class="layui-form-label">@item.Name [@(item.Key)]</label>
                            <div class="layui-input-block">
                                <label class="layui-form-label-show">@(Model.Dto.PaymentConfig[item.Key])</label>
                            </div>
                        </div>
                    }
                </div>
            </fieldset>
        </div>
        <div class="layui-footer">
            @Html.ActionsForClose()
        </div>
    }
</div>
@section Scripts
    {
    <script>
        layui.use(['form'], function () {
            var form = layui.form;
        });
    </script>
}
