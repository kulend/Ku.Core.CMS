@page "{handler?}"
@model Vino.Core.CMS.Web.Backend.Pages.DataCenter.AppFeedback.IndexModel
@using Vino.Core.CMS.Domain.Dto.DataCenter
@using Vino.Core.Infrastructure.Extensions
@{
    //----------------------------------------------------------------
    // Copyright (C) 2018 vino 版权所有
    //
    // 文件名：Index.cshtml
    // 功能描述：应用反馈 列表页面
    //
    // 创建者：kulend@qq.com
    // 创建时间：2018-04-24 08:45
